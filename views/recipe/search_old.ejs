<link rel="stylesheet" type="text/css" href="css/search-style.css">
<% include ../partials/header %>

		<div class="jumbotron jumbo-bg" id="top">
			<div class="header-text">
				<h2>Horay! We found <%= data["results"].length %> recipes!</h2>
				<h4>Search Results</h4>
				<div class="container">
				<div class="col-lg-12 col-md-12 col-sx-12">
					<form action="/q" method="get">
			            <div class="input-group">
			              <input type="text" class="form-control" id="tokenfield-1" name="search" value="<%= q %>">
			              <span class="input-group-btn">
			                <input type="submit" class="btn btn-default btn-def" value="Go!">
			              </span>
			            </div>
			          </form>
				</div>
			</div>
			</div>
		</div>
		
		<div class="row"> 
			<div class"container">
				<div class="col-lg-12 col-md-12 col-sx-12">
					<div id="gallery-recipes">
						<% data["results"].forEach(function(recipe){ %>    	
							<!-- Receipe -->
							<div class="item thumbnail wow bounceInUp">
								<img src="<%= recipe["thumbnail"] %>" alt="<%= recipe["title"] %>">
								<div class="caption">
									<a href="<%= recipe["href"] %>" class="link"><h4><%= recipe["title"] %></h4></a>
									<p>
										<a href="<%= recipe["href"] %>" class="btn btn-default btn-def" role="button">
										  Read more
										</a>
										<!--<a href="#" class="btn btn-default btn-wishlist" role="button">-->
										<!--  <i class="fa fa-heart-o" aria-hidden="true"></i></span> Add to Wishlist-->
									  	<!--	</a>-->
									</p>
								</div>
							</div>
	          			<% }); %>
	          		</div>	
	         	</div>
	         </div>	
        </div>

<% include ../partials/footer %>
<!-- tokienfield js stuff -->
<script type="text/javascript" src="js/bootstrap-tokenfield.js" charset="UTF-8"></script>
<script type="text/javascript" src="js/typeahead.bundle.min.js" charset="UTF-8"></script>
<!-- autocomplete data -->
<script type="text/javascript" src="js/docs.js" charset="UTF-8"></script>
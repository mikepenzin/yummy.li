<link rel="stylesheet" type="text/css" href="css/search-style.css">
<% include ../partials/header %>

		<div class="jumbotron jumbo-bg" id="top">
			<div class="header-text">
				<h2>Horay! We found some nice recipes!</h2>
				<h4>Search Results</h4>
				<div class="container">
				<div class="col-lg-12 col-md-12 col-sx-12">
					<form action="/q" method="get">
			            <div class="input-group">
			              <input type="text" class="form-control" id="tokenfield-1" name="search" value="<%= q %>">
			              <span class="input-group-btn">
			                <input type="submit" class="btn btn-default" value="Go!">
			              </span>
			            </div>
			          </form>
				</div>
			</div>
			</div>
		</div>
		
		<div class="row"> 
			<div class"container">
				<div class="col-lg-12 col-md-12 col-sx-12">
					<div id="gallery-recipes">
						<% data.forEach(function(recipe){ %>    	
							<!-- Receipe -->
							<div class="item thumbnail wow bounceInUp">
								<img src="<%= recipe.image_url %>" alt="<%- recipe.title %>">
								<div class="caption">
									<a href="<%= recipe.source_url %>" target="_blank" class="link"><h5><%- recipe.title.substring(0, 50) %>...</h5></a>
									<span class="label label-default"><%= recipe.publisher %></span>
									<br><br>
									<p>
										<a href="<%= recipe.source_url %>" target="_blank" class="btn btn-default btn-def btn-block" role="button">
										  Read more
										</a>
										<a href="#" class="btn btn-default btn-wishlist btn-block" role="button">
										  <i class="fa fa-heart-o" aria-hidden="true"></i></span> Add to Wishlist
									  	</a>
									</p>
								</div>
							</div>
	          			<% }); %>
	          		</div>
	          		<div class="container">
		          		<nav aria-label="pagination">
						  <ul class="pager">
						  	<% if(page == 1){ %>
						  		<li class="previous disabled"><a href="/q?search=<%= q %>&page=<%= page %>"><span aria-hidden="true">&larr;</span> Previous</a></li>
						  		<% pageUp = (page + 1); %>
						  		<li class="next"><a href="/q?search=<%= q %>&page=<%= pageUp %>">Next <span aria-hidden="true">&rarr;</span></a></li>
						  	<% } else { %>
							  	<% pageDown = (page - 1); %>
							  	<% pageUp = (page + 1); %>
							  	<li class="previous"><a href="/q?search=<%= q %>&page=<%= pageDown %>"><span aria-hidden="true">&larr;</span> Previous</a></li>
	   							<li class="next"><a href="/q?search=<%= q %>&page=<%= pageUp %>">Next <span aria-hidden="true">&rarr;</span></a></li>
						  	<% } %>
						  </ul>
						</nav>
					</div>
	         	</div>
	         </div>	
        </div>

<% include ../partials/footer %>
<!-- tokienfield js stuff -->
<script type="text/javascript" src="js/bootstrap-tokenfield.js" charset="UTF-8"></script>
<script type="text/javascript" src="js/typeahead.bundle.min.js" charset="UTF-8"></script>
<!-- autocomplete data -->
<script type="text/javascript" src="js/docs.js" charset="UTF-8"></script>
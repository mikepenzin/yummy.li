<%- include('../partials/header') %>

<title>Search results for <%= q %> - yummy.li</title>
<link rel="stylesheet" type="text/css" href="/css/basic.css">
<link rel="stylesheet" type="text/css" href="/minified/css/search-style.css">
<link rel="stylesheet" type="text/css" href="/minified/css/noresults-style.css">

<%- include('../partials/navbar-body') %>

<div class="jumbotron-noresults jumbo-bg-search" id="top">
	<div class="header-text">
		<h2>Oh no! We couldn't find any recipes matching your search <i class="fa fa-frown-o" aria-hidden="true"></i></h2>
		<h4>Please, give it another try and refine your search</h4>
		<div class="container">
			<div class="col-lg-12 col-md-12 col-sx-12">
				<form action="/q" method="get">
		            <div class="input-group">
		              <input type="text" class="form-control" id="search" name="search" value="<%= q %>">
		              <input type="hidden" name="page" value="1" />
		              <span class="input-group-btn">
		                <input type="submit" class="btn btn-default" value="Go!">
		              </span>
		            </div>
		          </form>
			</div>
		</div>
	</div>
</div>
		
		
<%- include('../partials/html-footer') %>
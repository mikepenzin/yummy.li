<% include ../partials/header %>
<title>Choose your new password - yummy.li</title>

<link rel="stylesheet" type="text/css" href="/css/basic.css">
<link rel="stylesheet" type="text/css" href="/minified/css/team-style.css">

<% include ../partials/navbar-body %>
<% include ../partials/modal-hiw %>

	<div class="container">	
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12">
			    <h2>Enter new password</h2>
				<form name="reset" class="form-horizontal" action"" onsubmit="return validateForm()" method="POST">
					<!-- Text input-->							
					<div>
						<label class="control-label" for="email">New Password:</label><br>
					    <small>Password must contain at least 6 characters, including UPPER/lowercase and numbers</small>
						<input name="password" type="password" placeholder="Enter new password" class="form-control input-md" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}">
					</div>
					<div>
						<label class="control-label" for="email">Confirm New Password:</label>
						<input name="confirm" type="password" placeholder="Confirm new password" class="form-control input-md">
					</div>
					<br>
					<!-- Button -->
						<button id="signup" name="signup" class="btn btn-default btn-signup btn-block">Submit</button>
				</form>
			</div>	
		</div>					
	</div>


<% include ../partials/html-footer %>
<script>
function validateForm() {
    var y = document.forms["reset"]["password"];
    var z = document.forms["reset"]["confirm"];
    if (y.value != z.value) { 
	   alert("Your password and confirmation password do not match.");
	   z.focus();
	   return false; 
	}
}
</script>

</body>
</html>
<% include ../partials/header %>
<title>Signup for yummy.li</title>

<link rel="stylesheet" type="text/css" href="/css/basic.css">
<link rel="stylesheet" type="text/css" href="/minified/css/team-style.css">

<% include ../partials/navbar-body %>

	<div class="container container-xs">
      <% if(error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } else if(success && success.length > 0) { %>
            <div class="alert alert-success" role="alert"><%= success %></div>
      <% } %>      
    </div>
	<div class="container">	
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12">
			    <h2>SIGN UP</h2>
				<form name="signup" class="form-horizontal" action="/auth/signup" onsubmit="return validateForm()" method="POST">
					
					<p class="help-block">All fields are required!</p>
					<div>
						<label class="control-label" for="email">E-mail:</label>
						<input name="username" type="email" placeholder="Enter your email" class="form-control input-md" require>
					</div>
					<div>
						<label class="control-label" for="email">First Name:</label>
						<input name="name" type="text" placeholder="Enter your First Name" class="form-control input-md" require>
					</div>
					<div>
						<label class="control-label" for="email">Last Name:</label>
						<input name="surname" type="text" placeholder="Enter your Last Name" class="form-control input-md" require>
					</div>
					<hr>
					<div>
					    <label class="control-label" for="email">Password:</label>
					    <br>
					    <small>Password must contain at least 6 characters, including UPPER/lowercase and numbers</small>
						<input name="password" type="password" placeholder="Enter desired password" class="form-control input-md" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}">
					</div>
					<div>
					    <label class="control-label" for="email">Confirm Password:</label>
						<input name="cpassword" type="password" placeholder="Enter desired password" class="form-control input-md">
					</div>
					<br>
					<div>
						<button id="submit" name="submit" class="btn btn-default btn-signup btn-block">Sign Up</button>
					</div>
					
				</form>
			</div>	
		</div>					
	</div>
	
<% include ../partials/modal-hiw %>
<% include ../partials/html-footer %>

<script>
	function validateForm() {
		var x = document.forms["signup"]["username"].value;
		var y = document.forms["signup"]["password"];
		var z = document.forms["signup"]["cpassword"];
		if (x == "") {
			alert("Email field must be filled out");
			return false;
		} else if (y.value != z.value) { 
			alert("Your password and confirmation password do not match.");
			z.focus();
			return false; 
		}
	}
</script>

</body>
</html>
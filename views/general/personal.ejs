<% include ../partials/header %>
<title>Search results for  - yummy.li</title>
<link rel="stylesheet" type="text/css" href="/css/basic.css">
<link rel="stylesheet" type="text/css" href="/minified/css/personal-style.css">


<% include ../partials/navbar-body %>


<% if((typeof(data) != 'undefined') && (data.length > 0) && (currentUser.favFood != [""])) { %>
    <div class="jumbotron jumbo-bg-personal" id="top">
        <div class="header-text">
            <div class="container">
                <div class="col-lg-12 col-md-12 col-sx-12">
                    <form action="/q" method="get">
                        <div class="input-group">
                            <input type="text" 
                                   class="form-control" 
                                   id="search" 
                                   name="search" 
                                   value="<%= currentUser.favFood %>">
                            <input type="hidden" name="page" value="1" />
                            <span class="input-group-btn">
                            <input type="submit" class="btn btn-default" value="Go!">
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="gallery">
            <span class="gallery-text">Featured Recipes</span>
            <a href="/q?search=<%= currentUser.favFood %>&page=1" class="btn btn-show pull-right">See All</a>
        </div>
    </div>
    <div class="row"> 
        <div class="col-lg-12 col-md-12 col-sx-12">
            <div id="gallery-recipes">
                <% for(var i = 0; i < 5; i++) { %>  
                    <div class="item thumbnail">
                        <img src="<%= data[i].image_url %>" alt="<%- data[i].title %>">
                        <div class="caption">
                            <a href="/recipe/<%= data[i].recipe_id %>" class="link"><h5><%- data[i].title %>...</h5></a>
                            <span class="label label-default"><%= data[i].publisher %></span>
                            <br><br>
                            <p>
                                <a href="/recipe/<%= data[i].recipe_id %>" class="btn btn-default btn-def btn-block" role="button">
                                    Read more
                                </a>
                            </p>
                        </div>
                    </div>
                <% } %>   
            </div>
        </div>
    </div>
    
<% } else { %>

    <div class="jumbotron jumbo-bg-personal" id="top">
        <div class="header-text">
            <div class="container">
                <div class="col-lg-12 col-md-12 col-sx-12">
                    <form action="/q" method="get">
                        <div class="input-group">
                            <input type="text" 
                                   class="form-control" 
                                   id="search" 
                                   name="search" 
                                   placeholder="Type maximum 4 ingredients..." >
                            <input type="hidden" name="page" value="1" />
                            <span class="input-group-btn">
                            <input type="submit" class="btn btn-default" value="Go!">
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="gallery">
            <span class="gallery-text">Featured Recipes</span>
        </div>
    </div>
    <div class="container">
        <p class="well centralize">
            <strong>
                Add favorite ingredients to your profile in order to see personal search results
            </strong>
        </p>
    </div>
<% } %>
    
<hr>

<% if(currentUser.recipes.length > 0) { %>
    
    <% if(recipeCount > 5) { recipeCount = 5 } %>
    
    <div class="container">
        <div class="gallery">
            <span class="gallery-text"><i class="fa fa-heart-o" aria-hidden="true"></i> Your Wishlist</span>
            <a href="/profile/<%= currentUser._id %>/wishlist" class="btn btn-show pull-right">See All</a>
        </div>
    </div>
        <div class="row"> 
            <div class="col-lg-12 col-md-12 col-sx-12">
                <div style="margin: 0 auto; !important" id="feature-recipes">
                    <% recipes = currentUser.recipes %>
                    <% recipes.reverse(); %>
                    <% for(var q = 0; q < recipeCount; q++) { %>  
                        <div class="recipe thumbnail">
                            <img src="<%= recipes[q].image_url %>" alt="<%- recipes[q].title %>">
                            <div class="caption">
                                <a href="/recipe/<%= recipes[q].id %>" class="link"><h5><%- recipes[q].title %>...</h5></a>
                                <span class="label label-default"><%= recipes[q].publisher %></span>
                                <br><br>
                                <p>
                                    <a href="/recipe/<%= recipes[q].id %>" class="btn btn-default btn-def btn-block" role="button">
                                        Read more
                                    </a>
                                </p>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
<% } else { %>
    <div class="container">
        <div class="gallery">
            <span class="gallery-text"><i class="fa fa-heart-o" aria-hidden="true"></i> Your Wishlist</span>
        </div>
    </div>
        <div class="container">
            <p class="well centralize">
                <strong>
                    Add you favorite recipes to your wishlist!
                </strong>
            </p>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
        </div>
    <% } %>
    
</div>
    
<% include ../partials/footer %>
<% include ../partials/modal-hiw %>
<% include ../partials/html-footer %>

    <script type="text/javascript" src="/components/bootstrap-tokenfield/dist/bootstrap-tokenfield.min.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/components/bootstrap-tokenfield/docs-assets/minified/js/typeahead.bundle.min.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/minified/js/docs.js" charset="UTF-8"></script>
    <script type="text/javascript" src="/minified/js/navbar.js" charset="UTF-8"></script>
</body>
</html>